<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DeptoEnVisitaActivity"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size">
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/padding_size"
                    android:background="@drawable/border_box">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Parquemar 3"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Condominio Privado"
                        android:textSize="@dimen/under_title_size"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_box">
                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:layout_margin="@dimen/margin_size"
                            android:src="@mipmap/ic_launcher_round">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size"
                    android:background="@drawable/border_box"
                    android:backgroundTint="@color/gris_claro"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10sp"
                        android:text="En visita"
                        android:textAlignment="center"
                        android:textColor="@color/durazno"
                        android:textSize="@dimen/title_size"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:text="Datos Visita"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="end">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_VolverEnVisita"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/volver"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/white"
                                android:paddingTop="5sp"
                                android:paddingBottom="5sp"
                                app:iconSize="30sp"
                                app:iconTint="@color/white"
                                app:icon="@drawable/return_blanco"
                                app:cornerRadius="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/margin_size"
                        android:layout_marginEnd="@dimen/margin_size"
                        android:layout_marginTop="@dimen/margin_size"
                        android:layout_marginBottom="10sp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/TextViewNombreConductor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/TextViewRutConductor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutPasajeroUno"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <TextView
                                android:id="@+id/TextViewNombrePasajeroUno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/TextViewRutPasajeroUno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/margin_size"
                        android:layout_marginEnd="@dimen/margin_size"
                        android:layout_marginBottom="@dimen/margin_size"
                        android:layout_marginTop="@dimen/margin_size">
                        <LinearLayout
                            android:id="@+id/layoutPasajeroDos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <TextView
                                android:id="@+id/TextViewNombrePasajeroDos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/TextViewRutPasajeroDos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutPasajeroTres"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <TextView
                                android:id="@+id/TextViewNombrePasajeroTres"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/TextViewRutPasajeroTres"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/margin_size"
                        android:layout_marginEnd="@dimen/margin_size"
                        android:layout_marginTop="@dimen/margin_size"
                        android:layout_marginBottom="20sp">
                        <LinearLayout
                            android:id="@+id/layoutPasajeroCuatro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <TextView
                                android:id="@+id/TextViewNombrePasajeroCuatro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/TextViewRutPasajeroCuatro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutPasajeroCinco"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <TextView
                                android:id="@+id/TextViewNombrePasajeroCinco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/TextViewRutPasajeroCinco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_size"
                        android:layout_marginEnd="@dimen/margin_size">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="180sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:text="Patente Vehiculo"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:maxLines="3"
                                android:lines="2"
                                android:textSize="@dimen/text_size"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/TextViewPatente"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/red"
                                android:padding="@dimen/padding_size"
                                android:text="GCSL23"
                                android:textSize="@dimen/text_size"
                                android:textAllCaps="false"
                                android:clickable="false"
                                android:textColor="@color/white"
                                app:cornerRadius="@dimen/corner_radius" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_size">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/TextViewMarcaIngreso"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:text="Ingreso:    "
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:lines="2"
                                android:textSize="@dimen/text_size"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_MarcarSalida"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/red"
                                android:padding="@dimen/padding_size"
                                android:text="Marcar salida"
                                android:textSize="@dimen/text_size"
                                android:textAllCaps="false"
                                android:clickable="false"
                                android:textColor="@color/white"
                                app:cornerRadius="@dimen/corner_radius" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>